# Al-Buraq Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# AI PROVIDERS (Required)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=sqlite:///data/alburaq.db
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=alburaq

# =============================================================================
# COMMUNICATION (Optional - for Sales Agent)
# =============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

SENDGRID_API_KEY=

# =============================================================================
# LOAD BOARDS (Optional - for production)
# =============================================================================
DAT_API_KEY=
DAT_API_SECRET=

# =============================================================================
# BUSINESS RULES
# =============================================================================
MIN_RATE_PER_MILE=2.00
TARGET_RATE_PER_MILE=2.75
COMMISSION_RATE=0.07
CHARITY_PERCENTAGE=0.05
LEAD_QUALIFICATION_THRESHOLD=0.6

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=Al-Buraq Dispatch
DEBUG=false
